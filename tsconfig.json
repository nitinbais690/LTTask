{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
     "paths": {
      "_navigation/*": [
        "./navigation/*"
      ],
      "_screens/*": [
        "./screens/*"
      ],
      "_theme/*": [
        "./theme/*"
      ],
      "_server/*": [
        "./server/*"
      ],
      "_services/*": [
        "./services/*"
      ]
     }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}